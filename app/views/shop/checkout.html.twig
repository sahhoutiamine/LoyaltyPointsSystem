{% extends 'base.html.twig' %}

{% block title %}Checkout - LoyaltyPlus{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary mb-3">
            Finaliser votre commande
        </h1>
        <p class="text-slate-500 text-lg">Vérifiez vos articles et procédez au paiement sécurisé</p>
    </div>

    {% if checkout_error %}
        <div class="mb-8 p-4 bg-red-50 border border-red-100 text-red-600 rounded-xl flex items-center gap-3 animate-pulse">
            <i class="fa-solid fa-circle-exclamation text-xl"></i>
            {{ checkout_error }}
        </div>
    {% endif %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        
        <!-- Left Column: Payment Form -->
        <div class="lg:col-span-2 space-y-6">
            
            <!-- Payment Details Card -->
            <div class="glass p-8 rounded-3xl relative overflow-hidden">
                <!-- Watermark Icon -->
                <div class="absolute -top-10 -right-10 text-9xl text-slate-100 opacity-50 -z-10 transform rotate-12">
                    <i class="fa-regular fa-credit-card"></i>
                </div>

                <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-primary">
                        <i class="fa-solid fa-credit-card"></i>
                    </div>
                    Informations de paiement
                </h2>
                
                <p class="text-sm text-slate-500 bg-slate-50 px-4 py-2 rounded-lg border border-slate-100 mb-6 inline-flex items-center gap-2">
                    <i class="fa-solid fa-info-circle text-primary"></i>
                    <span>Mode simulation : Aucune carte réelle ne sera débitée.</span>
                </p>

                <form action="/shop/process-checkout" method="POST" id="checkout-form" class="space-y-6">
                    
                    <!-- Card Name -->
                    <div class="space-y-2">
                        <label for="card_name" class="text-sm font-semibold text-slate-600 ml-1">Nom sur la carte</label>
                        <div class="relative">
                            <input type="text" id="card_name" name="card_name" placeholder="Jean Dupont" required
                                class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-3.5 outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-slate-700 placeholder:text-slate-400">
                            <i class="fa-solid fa-user absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        </div>
                    </div>

                    <!-- Card Number -->
                    <div class="space-y-2">
                        <label for="card_number" class="text-sm font-semibold text-slate-600 ml-1">Numéro de carte</label>
                        <div class="relative">
                            <input type="text" id="card_number" name="card_number" placeholder="0000 0000 0000 0000" maxlength="19" required
                                class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-3.5 outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-slate-700 placeholder:text-slate-400 tracking-wider font-mono">
                            <i class="fa-regular fa-credit-card absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                            <div class="absolute right-4 top-1/2 -translate-y-1/2 flex gap-2 text-xl text-slate-400">
                                <i class="fa-brands fa-cc-visa hover:text-blue-600 transition-colors"></i>
                                <i class="fa-brands fa-cc-mastercard hover:text-red-500 transition-colors"></i>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <!-- Expiry -->
                        <div class="space-y-2">
                            <label for="card_expiry" class="text-sm font-semibold text-slate-600 ml-1">Expiration</label>
                            <div class="relative">
                                <input type="text" id="card_expiry" name="card_expiry" placeholder="MM/AA" maxlength="5" required
                                    class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-3.5 outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-slate-700 placeholder:text-slate-400 font-mono text-center">
                                <i class="fa-regular fa-calendar absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                            </div>
                        </div>

                        <!-- CVV -->
                        <div class="space-y-2">
                            <label for="card_cvv" class="text-sm font-semibold text-slate-600 ml-1">CVV</label>
                            <div class="relative">
                                <input type="text" id="card_cvv" name="card_cvv" placeholder="123" maxlength="4" required
                                    class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-3.5 outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-slate-700 placeholder:text-slate-400 font-mono text-center">
                                <i class="fa-solid fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                            </div>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="group relative w-full bg-gradient-to-r from-primary to-secondary text-white font-bold text-lg py-4 rounded-xl shadow-lg shadow-primary/30 hover:shadow-primary/50 hover:scale-[1.02] active:scale-[0.98] transition-all duration-200 overflow-hidden">
                            <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                            <span class="relative flex items-center justify-center gap-3">
                                Payer {{ cart_total|number_format(2, '.', ' ') }} $
                                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                            </span>
                        </button>
                        <div class="mt-4 text-center">
                             <a href="/shop/cart" class="text-sm text-slate-500 hover:text-primary transition-colors inline-flex items-center gap-1 group">
                                <i class="fa-solid fa-arrow-left text-xs group-hover:-translate-x-1 transition-transform"></i>
                                Retourner au panier
                             </a>
                        </div>
                    </div>
                </form>
            </div>
            
            <!-- Security Badge -->
            <div class="flex items-center justify-center gap-6 text-slate-400 text-sm opacity-80">
                <span class="flex items-center gap-2"><i class="fa-solid fa-lock"></i> Paiement sécurisé</span>
                <span class="flex items-center gap-2"><i class="fa-solid fa-shield-halved"></i> Données chiffrées</span>
            </div>
        </div>

        <!-- Right Column: Order Summary -->
        <div class="lg:col-span-1 space-y-6">
            <div class="glass p-6 rounded-3xl sticky top-24">
                <h3 class="text-xl font-bold text-slate-800 mb-6 pb-4 border-b border-slate-100">Récapitulatif</h3>

                <!-- Items List -->
                <div class="space-y-4 mb-6 max-h-[300px] overflow-y-auto custom-scrollbar pr-2">
                    {% for item in cart_items %}
                        <div class="flex items-start justify-between group">
                            <div class="flex-1">
                                <p class="font-medium text-slate-700 text-sm group-hover:text-primary transition-colors">{{ item.name }}</p>
                                <p class="text-slate-400 text-xs mt-0.5">Qté: {{ item.quantity }}</p>
                            </div>
                            <span class="font-semibold text-slate-700 text-sm whitespace-nowrap ml-4">
                                {{ (item.price * item.quantity)|number_format(2, '.', ' ') }} $
                            </span>
                        </div>
                    {% endfor %}
                </div>

                <!-- Totals -->
                <div class="space-y-3 pt-4 border-t border-slate-100">
                    <div class="flex justify-between items-center text-slate-600">
                        <span>Sous-total</span>
                        <span class="font-medium">{{ cart_total|number_format(2, '.', ' ') }} $</span>
                    </div>
                    <div class="flex justify-between items-center text-slate-600">
                        <span>Livraison</span>
                        <span class="text-green-500 font-medium">Gratuite</span>
                    </div>
                    <div class="flex justify-between items-center text-xl font-bold text-slate-800 pt-2">
                        <span>Total</span>
                        <span>{{ cart_total|number_format(2, '.', ' ') }} $</span>
                    </div>
                </div>

                <!-- Loyalty Points Bonus -->
                <div class="mt-6 bg-gradient-to-br from-indigo-50 to-purple-50 border border-indigo-100 p-4 rounded-xl flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-yellow-500 shadow-sm shrink-0">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div>
                        <p class="text-xs text-indigo-600 font-semibold uppercase tracking-wider">Bonus Fidélité</p>
                        <p class="text-sm text-slate-700 font-medium">Gagnez <span class="text-indigo-600 font-bold">+{{ loyalty_points }} points</span></p>
                    </div>
                </div>

                <!-- Balance Update -->
                <div class="mt-4 p-4 rounded-xl bg-slate-50 border border-slate-100">
                     <p class="text-xs text-slate-500 mb-2">Solde de points</p>
                     <div class="flex justify-between items-center text-sm">
                         <span class="text-slate-600">Actuel:</span>
                         <span class="font-semibold text-slate-800">{{ user.loyalty_points }} pts</span>
                     </div>
                     <div class="flex justify-between items-center text-sm mt-1">
                        <span class="text-indigo-600 font-medium">Nouveau solde:</span>
                        <span class="font-bold text-indigo-600">{{ user.loyalty_points + loyalty_points }} pts</span>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Simple formatting for credit card input
    const ccInput = document.getElementById('card_number');
    const expiryInput = document.getElementById('card_expiry');
    const cvvInput = document.getElementById('card_cvv');

    if(ccInput){
        ccInput.addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = value.substring(0, 19);
        });
    }

    if(expiryInput){
        expiryInput.addEventListener('input', function(e) {
             let value = e.target.value.replace(/\D/g, '');
             if (value.length >= 2) {
                 value = value.substring(0, 2) + '/' + value.substring(2, 4);
             }
             e.target.value = value.substring(0, 5);
        });
    }

    if(cvvInput){
         cvvInput.addEventListener('input', function(e) {
             e.target.value = e.target.value.replace(/\D/g, '').substring(0, 4);
         });
    }
</script>
{% endblock %}
