{% extends 'base.html.twig' %}

{% block title %}Confirmation - LoyaltyPlus{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto text-center">
    
    <!-- Success Animation/Icon -->
    <div class="mb-8 relative inline-block">
        <div class="absolute inset-0 bg-green-400 rounded-full blur-xl opacity-20 animate-pulse"></div>
        <div class="relative w-24 h-24 bg-gradient-to-br from-green-400 to-emerald-600 rounded-full flex items-center justify-center shadow-lg mx-auto">
            <i class="fa-solid fa-check text-4xl text-white"></i>
        </div>
    </div>

    <h1 class="text-4xl font-bold text-slate-800 mb-4">Commande Confirmée !</h1>
    <p class="text-xl text-slate-600 mb-10">Merci pour votre achat, <span class="text-primary font-semibold">{{ user.name }}</span> !</p>

    <!-- Order Details Card -->
    <div class="glass p-8 rounded-3xl text-left mb-8 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-secondary"></div>
        
        <div class="flex justify-between items-center mb-8 pb-6 border-b border-slate-100">
            <div>
                <h2 class="text-xl font-bold text-slate-800">Détails de la commande</h2>
                <p class="text-slate-500 text-sm mt-1">Date: {{ purchase.date|date("d/m/Y H:i") }}</p>
            </div>
            <div class="bg-slate-50 px-4 py-2 rounded-lg border border-slate-100">
                <span class="text-slate-500 text-sm font-mono">ID: #{{ random(10000, 99999) }}</span>
            </div>
        </div>

        <!-- Items List -->
        <div class="space-y-4 mb-8">
            {% for item in purchase.items %}
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400">
                            <i class="fa-solid fa-box-open"></i>
                        </div>
                        <div>
                            <p class="font-bold text-slate-700">{{ item.name }}</p>
                            <p class="text-sm text-slate-500">Quantité: {{ item.quantity }}</p>
                        </div>
                    </div>
                    <span class="font-semibold text-slate-700">{{ (item.price * item.quantity)|number_format(2, '.', ' ') }} $</span>
                </div>
            {% endfor %}
        </div>

        <!-- Total -->
        <div class="flex justify-between items-center py-4 border-t border-slate-100 mb-8">
            <span class="text-lg font-medium text-slate-600">Total payé</span>
            <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">{{ purchase.total|number_format(2, '.', ' ') }} $</span>
        </div>

        <!-- Points Reward Card -->
        <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-2xl p-6 text-white relative overflow-hidden group">
            <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white opacity-10 rounded-full blur-xl group-hover:scale-150 transition-transform duration-700"></div>
            <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-20 h-20 bg-pink-500 opacity-20 rounded-full blur-xl animate-pulse"></div>
            
            <div class="relative z-10 flex justify-between items-center">
                <div>
                    <h3 class="text-lg font-bold mb-1 flex items-center gap-2">
                        <i class="fa-solid fa-gem text-yellow-300"></i> Points gagnés
                    </h3>
                    <p class="text-indigo-100 text-sm opacity-90">Ajoutés à votre solde fidélité</p>
                </div>
                <div class="text-right">
                    <span class="block text-3xl font-bold text-white">+{{ purchase.points_earned }}</span>
                    <span class="text-xs font-medium bg-white/20 px-2 py-0.5 rounded text-white inline-block mt-1">Nouveau solde: {{ purchase.new_points }}</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/shop" class="px-8 py-3 rounded-xl bg-white border border-slate-200 text-slate-700 font-semibold hover:bg-slate-50 hover:border-slate-300 transition-all shadow-sm hover:translate-y-[-2px]">
            <i class="fa-solid fa-basket-shopping mr-2"></i> Continuer mes achats
        </a>
        <a href="/" class="px-8 py-3 rounded-xl bg-gradient-to-r from-primary to-secondary text-white font-bold shadow-lg shadow-primary/30 hover:shadow-primary/50 hover:scale-105 transition-all">
            <i class="fa-solid fa-table-columns mr-2"></i> Tableau de bord
        </a>
    </div>
</div>
{% endblock %}
