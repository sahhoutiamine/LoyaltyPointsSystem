{% extends 'base.html.twig' %}

{% block title %}ShopEasy - Panier{% endblock %}

{% block content %}
    <h1 class="text-4xl font-extrabold text-white mb-8 drop-shadow-md">Votre Panier</h1>

    {% if cart_items is empty %}
        <div class="glass p-12 rounded-2xl text-center max-w-2xl mx-auto">
            <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6 text-slate-300">
                <i class="fa-solid fa-cart-shopping text-4xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-slate-800 mb-2">Votre panier est vide</h2>
            <p class="text-slate-500 mb-8">Il semblerait que vous n'ayez rien ajouté pour le moment.</p>
            <a href="/shop" class="inline-block bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition-transform hover:-translate-y-1">
                Continuer vos achats
            </a>
        </div>
    {% else %}
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Cart Items -->
            <div class="flex-grow">
                <div class="glass rounded-2xl overflow-hidden">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-slate-50/50 border-b border-slate-100">
                            <tr>
                                <th class="p-5 font-bold text-slate-500 text-xs uppercase tracking-wider">Produit</th>
                                <th class="p-5 font-bold text-slate-500 text-xs uppercase tracking-wider">Prix</th>
                                <th class="p-5 font-bold text-slate-500 text-xs uppercase tracking-wider">Quantité</th>
                                <th class="p-5 font-bold text-slate-500 text-xs uppercase tracking-wider text-right">Total</th>
                                <th class="p-5 font-bold text-slate-500 text-xs uppercase tracking-wider text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            {% for item in cart_items %}
                                <tr class="hover:bg-slate-50/30 transition-colors group">
                                    <td class="p-5 font-bold text-slate-700">{{ item.name }}</td>
                                    <td class="p-5 text-slate-600">{{ item.price|number_format(2, '.', ' ') }} $</td>
                                    <td class="p-5">
                                        <form action="/shop/update-cart" method="POST" class="flex items-center gap-2">
                                            <input type="hidden" name="product_id" value="{{ item.id }}">
                                            <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="99" 
                                                   class="w-16 px-2 py-1 rounded border border-slate-200 text-center font-medium focus:ring-2 focus:ring-primary/20 outline-none">
                                            <button type="submit" class="text-primary hover:text-indigo-700 p-2 rounded-full hover:bg-indigo-50 transition-colors" title="Mettre à jour">
                                                <i class="fa-solid fa-rotate-right"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="p-5 text-right font-bold text-slate-800">{{ (item.price * item.quantity)|number_format(2, '.', ' ') }} $</td>
                                    <td class="p-5 text-right">
                                        <form action="/shop/remove-from-cart" method="POST">
                                            <input type="hidden" name="product_id" value="{{ item.id }}">
                                            <button type="submit" class="text-slate-400 hover:text-red-500 transition-colors p-2 rounded-full hover:bg-red-50">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Summary -->
            <div class="w-full lg:w-96 flex-shrink-0">
                <div class="glass p-6 rounded-2xl sticky top-24">
                    <h3 class="text-lg font-bold text-slate-800 mb-6">Récapitulatif</h3>
                    
                    <div class="flex justify-between items-center mb-4 text-slate-600">
                        <span>Sous-total</span>
                        <span class="font-medium text-slate-800">{{ cart_total|number_format(2, '.', ' ') }} $</span>
                    </div>
                    
                    <div class="flex justify-between items-center mb-6 pt-4 border-t border-slate-100">
                        <span class="font-bold text-lg text-slate-800">Total</span>
                        <span class="font-bold text-2xl text-primary">{{ cart_total|number_format(2, '.', ' ') }} $</span>
                    </div>
                    
                    <div class="bg-green-50 border border-green-100 rounded-xl p-4 mb-6 flex items-start gap-3">
                         <i class="fa-solid fa-coins text-green-500 mt-1"></i>
                         <div>
                             <div class="text-xs font-bold text-green-800 uppercase tracking-wide mb-1">Points Bonus</div>
                             <div class="text-green-700 text-sm">Vous gagnerez <strong class="text-lg">{{ loyalty_points }}</strong> points avec cette commande !</div>
                         </div>
                    </div>

                    <div class="space-y-3">
                        <a href="/shop/checkout" class="block w-full bg-slate-900 hover:bg-slate-800 text-white font-bold py-3 px-4 rounded-xl shadow-lg text-center transition-all hover:scale-[1.02]">
                            Passer la commande
                        </a>
                        <a href="/shop" class="block w-full bg-white border border-slate-200 text-slate-600 font-bold py-3 px-4 rounded-xl hover:bg-slate-50 text-center transition-colors">
                            Continuer mes achats
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
